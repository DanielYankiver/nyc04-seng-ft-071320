<h1> Favorite a word! </h1>

<%= form_for @favorite do |f| %>
    <%= f.label :priority_level %>
    <%= f.number_field :priority_level %> <br>
    <%= f.label :student_id, "Student:" %>
    <%= f.collection_select :student_id, @students,  :id, :full_name %> <br>
    
    <%= f.label :word_id, "Word: " %>
    <%= f.collection_select :word_id, @words, :id, :named_right %> <br>

    <%= f.submit "Favorite it!" %>
<% end %>